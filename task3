    using System;

namespace task3
{
    class Program
    {
        static void Main(string[] args)
        {
        Start:

            Console.WriteLine("yashinizi daxil edin: ");
            int age = Convert.ToInt32(Console.ReadLine());

            if (age > 18)

            {
                Console.WriteLine("balinizi daxil edin: ");
                int point = Convert.ToInt32(Console.ReadLine());
                if (point > 50)

                {
                    Console.WriteLine("Tebrikler qebul olundunuz!");
                    goto Start;
                }
                else
                {
                    Console.WriteLine("qebul olunmadiniz");
                    goto Start;
                }
            }
            else
            {
                goto Start;
            }
        }
    }
}
